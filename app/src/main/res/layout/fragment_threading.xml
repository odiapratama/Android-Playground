<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.threading.ContainerThreadingFragment">

        <Button
            android:id="@+id/btnRxJava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_small"
            android:layout_marginTop="@dimen/dimen_medium"
            android:text="@string/rxjava" />

        <Button
            android:id="@+id/btnCoroutines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_small"
            android:layout_marginTop="@dimen/dimen_medium"
            android:text="@string/coroutines" />

    </LinearLayout>
</layout>